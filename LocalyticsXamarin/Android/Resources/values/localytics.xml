<?xml version="1.0" encoding="UTF-8" ?>
<resources>

    <!-- Toggle the Localytics referral receiver which is used to attribute sessions to
    their installation source -->
    <bool name="ll_referral_receiver_enabled">true</bool>

     <!--Represents the interval at which the Localytics SDK will upload data in the case of 2G
     or EDGE connections. Default value is 90 seconds. To disable uploading for this connectivity
      set the value to -1 -->
    <integer name="ll_bad_network_upload_interval_seconds">-1</integer>

    <!--Represents the interval at which the Localytics SDK will upload data in the case of 3G
      connection. Default value is 30 seconds. To disable uploading for this connectivity
      set the value to -1 -->
    <integer name="ll_decent_network_upload_interval_seconds">-1</integer>

    <!--Represents the interval at which the Localytics SDK will upload data in the case of 4G
      or LTE connections. Default value is 10 seconds. To disable uploading for this connectivity
      set the value to -1 -->
    <integer name="ll_great_network_upload_interval_seconds">-1</integer>

    <!--Represents the interval at which the Localytics SDK will upload data in the case of a WiFi
      connection. Having a WiFi connection will supersede any mobile data connection. Default value
      is 5 seconds. To disable uploading for this connectivity set the value to -1 -->
    <integer name="ll_wifi_upload_interval_seconds">-1</integer>

    <!-- Configure the Localytics session timeout -->
    <integer name="ll_session_timeout_seconds">15</integer>

    <!--Configure the default channel used for push notifications-->
    <string name="ll_default_push_channel_id" translatable="false">localytics_default</string>
    <!--Configure the default channel name used for push notifications-->
    <string name="ll_default_push_channel_name" translatable="false">Default</string>
    <!--Configure the default channel description used for push notifications-->
    <string name="ll_default_push_channel_description" translatable="false"/>

    <!--Configure the default channel used for places notifications-->
    <string name="ll_default_places_channel_id" translatable="false">localytics_default</string>
    <!--Configure the default channel name used for places notifications-->
    <string name="ll_default_places_channel_name" translatable="false">Default</string>
    <!--Configure the default channel description used for places notifications-->
    <string name="ll_default_places_channel_description" translatable="false"/>
</resources>